<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="right|center_horizontal"
            tools:srcCompat="@drawable/SIM" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Victória Lyles"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Sobre:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comecei pequeno, apenas fazendo alguns trabalhos de confeitaria freelance. Porém, quando percebi que havia uma gande clientela. Abri uma confeitaria pequena no interior de Londres, La Plume de Luna, e hoje esse lugar se tornou meu empreendimento na capital. Mas eu quis começar de novo, em outro lugar pois sempre gostei de aprender coisas novas e maneiras diferente de fazer a mesma coisa,  tenho certeza de que posso servir de bom grado para a sua confeitaria. " />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Motivo da Contatação:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Como citei anteriormente, sempre gostei da diversidade que a confeitaria tem e por isso resolvi começar de novo. Possuo 10 anos de experiência na aréa e tenho certeza de que util eu serei." />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="402dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>